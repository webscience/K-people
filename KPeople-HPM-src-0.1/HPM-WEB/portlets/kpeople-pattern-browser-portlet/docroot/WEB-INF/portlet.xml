<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>kpeople-pattern-browser</portlet-name>
		<display-name>K-people pattern browser portlet</display-name>
		<portlet-class>org.apache.portals.bridges.struts.StrutsPortlet</portlet-class>
		<init-param>
            <name>ServletContextProvider</name>
            <value>com.liferay.util.bridges.struts.LiferayServletContextProviderWrapper</value>
        </init-param>
		<init-param>
			<name>ViewPage</name>
			<value>/portlet_action/pattern-browser/view</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<supported-locale>it_IT</supported-locale>
        <resource-bundle>it.webscience.kpeople.web.portlet.process.resources.Language</resource-bundle>
		<portlet-info>
			<title>Kpeople pattern browser portlet</title>
			<short-title>Kpeople pattern browser portlet</short-title>
			<keywords>Kpeople pattern browser portlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>