<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.0.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_0_0.dtd">

<liferay-portlet-app>
    <!--
       Process browser 
    -->
	<portlet>
		<portlet-name>kpeople-process-browser</portlet-name>
		<icon>/icon.png</icon>
		
		<configuration-action-class>
			it.webscience.kpeople.web.portlet.process.action.ConfigurationActionImpl
		</configuration-action-class>
		
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>process_browser</friendly-url-mapping>
		<friendly-url-routes>/it/webscience/kpeople/web/portlet/process/processbrowserportlet-friendly-url-routes.xml</friendly-url-routes>
        
		<instanceable>true</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>kpeople-process-browser-portlet</css-class-wrapper>	
	</portlet>
    
    <role-mapper>
        <role-name>administrator</role-name>
        <role-link>Administrator</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>guest</role-name>
        <role-link>Guest</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>power-user</role-name>
        <role-link>Power User</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>user</role-name>
        <role-link>User</role-link>
    </role-mapper>
</liferay-portlet-app>